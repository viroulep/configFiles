!urxvt*font:             xft:Bitstream Vera Sans Mono:pixelsize=13
urxvt*font:             xft:DejaVu Sans Mono for Powerline:pixelsize=13
urxvt*termName:         rxvt-256color

urxvt*scrollBar:        false
urxvt*perl-lib:         /usr/lib/urxvt/perl/
urxvt*perl-ext-common:  default,matcher,clipboard,urxvi,url-picker
urxvt*urlLauncher:      /usr/bin/dwb
urxvt*matcher.button:   1
urxvt*saveLines:        10000

Xft*dpi:                96
Xft*antialias:          true
Xft*hinting:            full

!urxvt*background:       rgba:0000/0000/0000/cccc

