URxvt*scrollBar:        false
!urxvt*perl-lib:         /usr/lib/urxvt/perl/
urxvt*perl-ext-common:  default,matcher,selection-to-clipboard
urxvt*url-launcher:      /usr/bin/chromium
urxvt*matcher.button:   1
URxvt.keysym.Control-f: perl:matcher:select
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
urxvt*saveLines:        10000
urxvt*font:             xft:DejaVu Sans Mono for Powerline:pixelsize=15
urxvt*termName:         rxvt-256color
URxvt*iso14755:         false
URxvt*iso14755_52:      false

Xft*dpi:                96
Xft*antialias:          true
Xft*hinting:            full

!Dynamic resizing
urxvt.keysym.C-F1:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=9\007
urxvt.keysym.C-F2:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=11\007
urxvt.keysym.C-F3:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=13\007
urxvt.keysym.C-F4:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=17\007
urxvt.keysym.C-F5:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=18\007
urxvt.keysym.C-F6:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=20\007
urxvt.keysym.C-F7:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=22\007
urxvt.keysym.C-equal:command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=15\007

!#mod4-key sends esc-bell-key
!#todo: do it for all printable chars
urxvt.keysym.Mod4-h: \033\007h
urxvt.keysym.Mod4-l: \033\007l
urxvt.keysym.Mod4-H: \033\007H
urxvt.keysym.Mod4-L: \033\007L


