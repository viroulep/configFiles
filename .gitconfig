[core]
    editor = /usr/local/bin/vim
    excludesfile = ~/.gitignore
[user]
    name = Philippe Virouleau
    email = philippe.virouleau@imag.fr
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[push]
    default = simple
